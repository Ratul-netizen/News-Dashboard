# Docker Environment Configuration for News Dashboard

# Application Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
PORT=3000
HOSTNAME=0.0.0.0

# Database Configuration
DATABASE_URL=file:./prisma/dev.db

# External API Configuration
EXTERNAL_API_URL=http://192.168.100.35:9051/api/posts/?platform=F
EXTERNAL_SOURCES_API_URL=http://192.168.100.35:9051/api/sources/?platform=F
# Hybrid authentication system
# Option 1: Automatic authentication (tries to get token automatically)
EXTERNAL_AUTH_URL=http://192.168.100.35:9055/api/login/
EXTERNAL_API_EMAIL=test_demo01@gmail.com
EXTERNAL_API_PASSWORD=Test@123

# OAuth2 Configuration (optional, for client credentials flow)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_SCOPE=

# Option 2: Manual token (if automatic auth fails, use this token)
# Get a fresh token from the web interface and paste it here
EXTERNAL_API_TOKEN=
EXTERNAL_AUTH_SCHEME=Bearer

# Data Ingestion Settings
INGESTION_INTERVAL_MINUTES=10
HEALTH_CHECK_INTERVAL_MINUTES=5

# Logging
LOG_LEVEL=info
CRON_LOG_FILE=/var/log/cron.log

# Timeouts
API_TIMEOUT_MS=30000
STARTUP_WAIT_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=10

# Basic Authentication Configuration
BASIC_AUTH_USERNAME=test_demo01@gmail.com
BASIC_AUTH_PASSWORD=Test@123
